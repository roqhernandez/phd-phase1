    {
      "id": "statistics",
      "metadata": {
        "type": "concept",
        "description": "The discipline dealing with data collection, analysis, interpretation, and inference",
        "examples": [
          "Descriptive statistics",
          "Inferential statistics"
        ]
      }
    },
    {
      "id": "descriptive_statistics",
      "metadata": {
        "type": "concept",
        "description": "Summarizing and describing features of a dataset",
        "examples": [
          "Mean and median of exam scores"
        ]
      }
    },
    {
      "id": "inferential_statistics",
      "metadata": {
        "type": "concept",
        "description": "Drawing conclusions about populations from samples",
        "examples": [
          "Confidence intervals",
          "Hypothesis testing"
        ]
      }
    },
    {
      "id": "probability",
      "metadata": {
        "type": "concept",
        "description": "Mathematical framework for quantifying uncertainty",
        "examples": [
          "Coin toss model",
          "Bayesian reasoning"
        ]
      }
    },
    {
      "id": "random_variable",
      "metadata": {
        "type": "concept",
        "description": "Variable whose values are outcomes of a random phenomenon",
        "examples": [
          "Number of heads in 10 tosses"
        ]
      }
    },
    {
      "id": "discrete_random_variable",
      "metadata": {
        "type": "concept",
        "description": "Random variable that takes countable values",
        "examples": [
          "Binomial outcome"
        ]
      }
    },
    {
      "id": "continuous_random_variable",
      "metadata": {
        "type": "concept",
        "description": "Random variable that takes values on a continuum",
        "examples": [
          "Normal-distributed measurement"
        ]
      }
    },
    {
      "id": "probability_distribution",
      "metadata": {
        "type": "concept",
        "description": "Function describing probabilities for outcomes of a random variable",
        "examples": [
          "PMF",
          "PDF",
          "CDF"
        ]
      }
    },
    {
      "id": "normal_distribution",
      "metadata": {
        "type": "concept",
        "description": "Bell-shaped continuous distribution N(μ,σ²)",
        "examples": [
          "Heights",
          "Measurement noise"
        ]
      }
    },
    {
      "id": "binomial_distribution",
      "metadata": {
        "type": "concept",
        "description": "Distribution of successes in fixed trials with probability p",
        "examples": [
          "Number of defective items in a batch"
        ]
      }
    },
    {
      "id": "poisson_distribution",
      "metadata": {
        "type": "concept",
        "description": "Counts of rare events in a fixed interval",
        "examples": [
          "Calls per minute at a call center"
        ]
      }
    },
    {
      "id": "uniform_distribution",
      "metadata": {
        "type": "concept",
        "description": "All values in an interval are equally likely",
        "examples": [
          "Random number in [0,1]"
        ]
      }
    },
    {
      "id": "mean",
      "metadata": {
        "type": "concept",
        "description": "Arithmetic average of a set of numbers",
        "examples": [
          "Average temperature this week"
        ]
      }
    },
    {
      "id": "median",
      "metadata": {
        "type": "concept",
        "description": "Middle value of an ordered dataset",
        "examples": [
          "Household income median"
        ]
      }
    },
    {
      "id": "mode",
      "metadata": {
        "type": "concept",
        "description": "Most frequent value in a dataset",
        "examples": [
          "Common shoe size"
        ]
      }
    },
    {
      "id": "variance",
      "metadata": {
        "type": "concept",
        "description": "Expected squared deviation from the mean",
        "examples": [
          "σ² of measurements"
        ]
      }
    },
    {
      "id": "standard_deviation",
      "metadata": {
        "type": "concept",
        "description": "Square root of variance",
        "examples": [
          "σ of exam scores"
        ]
      }
    },
    {
      "id": "covariance",
      "metadata": {
        "type": "concept",
        "description": "Joint variability of two random variables",
        "examples": [
          "Cov(X,Y)"
        ]
      }
    },
    {
      "id": "correlation",
      "metadata": {
        "type": "concept",
        "description": "Scaled covariance ranging [-1,1]",
        "examples": [
          "Pearson’s r"
        ]
      }
    },
    {
      "id": "regression",
      "metadata": {
        "type": "concept",
        "description": "Modeling relationship between variables",
        "examples": [
          "Linear regression",
          "Logistic regression"
        ]
      }
    },
    {
      "id": "linear_regression",
      "metadata": {
        "type": "concept",
        "description": "Fits a linear model to predict a response",
        "examples": [
          "y = β₀ + β₁x + ε"
        ]
      }
    },
    {
      "id": "hypothesis_test",
      "metadata": {
        "type": "concept",
        "description": "Procedure to assess evidence against a null hypothesis",
        "examples": [
          "t-test",
          "χ² test"
        ]
      }
    },
    {
      "id": "null_hypothesis",
      "metadata": {
        "type": "concept",
        "description": "Baseline assumption to be tested",
        "examples": [
          "μ = μ₀"
        ]
      }
    },
    {
      "id": "alternative_hypothesis",
      "metadata": {
        "type": "concept",
        "description": "Competing claim against the null",
        "examples": [
          "μ ≠ μ₀"
        ]
      }
    },
    {
      "id": "p_value",
      "metadata": {
        "type": "concept",
        "description": "Probability of observing data as extreme as observed under H₀",
        "examples": [
          "p = 0.03"
        ]
      }
    },
    {
      "id": "confidence_interval",
      "metadata": {
        "type": "concept",
        "description": "Range likely to contain a population parameter",
        "examples": [
          "95% CI for mean"
        ]
      }
    },
    {
      "id": "central_limit_theorem",
      "metadata": {
        "type": "concept",
        "description": "Sampling distribution of the mean approaches normality",
        "examples": [
          "Means of large samples"
        ]
      }
    },
    {
      "id": "law_of_large_numbers",
      "metadata": {
        "type": "concept",
        "description": "Sample mean converges to the expected value as n increases",
        "examples": [
          "Fair coin empirical mean"
        ]
      }
    },
    {
      "id": "likelihood",
      "metadata": {
        "type": "concept",
        "description": "Function of parameters given data",
        "examples": [
          "L(θ|x)"
        ]
      }
    },
    {
      "id": "maximum_likelihood_estimation",
      "metadata": {
        "type": "concept",
        "description": "Parameter estimation by maximizing likelihood",
        "examples": [
          "MLE of normal μ,σ²"
        ]
      }
    },
    {
      "id": "bayes_theorem",
      "metadata": {
        "type": "equation",
        "description": "P(A|B) = P(B|A)P(A)/P(B)",
        "examples": [
          "Posterior from prior and likelihood"
        ]
      }
    },
    {
      "id": "prior",
      "metadata": {
        "type": "concept",
        "description": "Belief about parameter before seeing data",
        "examples": [
          "Beta prior for Bernoulli p"
        ]
      }
    },
    {
      "id": "posterior",
      "metadata": {
        "type": "concept",
        "description": "Updated belief after observing data",
        "examples": [
          "Beta posterior"
        ]
      }
    },
    {
      "id": "conditional_probability",
      "metadata": {
        "type": "concept",
        "description": "Probability of A given B",
        "examples": [
          "P(A|B)"
        ]
      }
    },
    {
      "id": "t_test",
      "metadata": {
        "type": "concept",
        "description": "Test comparing means using t-distribution",
        "examples": [
          "One-sample t-test"
        ]
      }
    },
    {
      "id": "chi_square_test",
      "metadata": {
        "type": "concept",
        "description": "Test for categorical variables or variance",
        "examples": [
          "χ² independence test"
        ]
      }
    },
    {
      "id": "sampling",
      "metadata": {
        "type": "concept",
        "description": "Selecting a subset of a population",
        "examples": [
          "Simple random sampling"
        ]
      }
    },
    {
      "id": "population",
      "metadata": {
        "type": "concept",
        "description": "Entire group of interest",
        "examples": [
          "All voters in a country"
        ]
      }
    },
    {
      "id": "sample",
      "metadata": {
        "type": "concept",
        "description": "Subset of the population used for analysis",
        "examples": [
          "Survey respondents"
        ]
      }
    }
